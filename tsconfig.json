{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",
    "rootDir": "./src", 
    "outDir": "./dist", 
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, 
    "noImplicitAny": false 
  },
  "include": ["src/**/*.ts", "src/types/custom.d.ts"],
  "exclude": ["node_modules", "dist"]
}